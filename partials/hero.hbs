{{#if @custom.hero_section}}
<div class="flex flex-col-reverse md:flex-row items-start gap-10 py-8 md:py-12 lg:py-16">
  <div class="text-right mx-auto px-4">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">{{@custom.hero_title}}</h1>
    <p class="mt-6 mb-0 text-lg md:text-xl text-gray-600 dark:text-gray-300 font-medium max-w-[560px] mx-auto">
      {{@custom.hero_text}}
    </p>

  </div>
    {{#if @custom.hero_image}}
    <div class="mt-8 flex justify-center">
      <img src="{{img_url @custom.hero_image size="small"}}" alt="{{@custom.hero_title}}" class="rounded-lg shadow-lg max-w-full h-auto" />
    </div>
    {{else}}
    <div class="mt-8 flex justify-center items-center h-48 bg-gray-100 dark:bg-gray-8 rounded-lg p-12 md:p-20 border-4 border-dashed border-gray-300 dark:border-gray-600">
      <p class="text-gray-400 dark:text-gray-500">فضای خالی</p>
    </div>
    {{/if}}
</div>
{{/if}}