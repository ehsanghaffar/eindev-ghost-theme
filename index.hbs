{{!< default}}

<div class="mx-auto px-4 md:px-8 py-16 md:py-24">
    {{> "hero"}}
        {{#if @custom.latest_post}}
        <div class="my-6 md:my-12 mb-12">
            {{#get "posts" limit="6" include="tags" as |recents|}}
            {{#if recents}}
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6 mt-12">
                <div>
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-0">
                        {{@custom.latest_post_title}}
                    </h2>
                </div>
                <a class="inline-flex items-center px-4 py-2.5 rounded border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 font-medium hover:text-gray-900 dark:hover:text-white hover:border-gray-500 dark:hover:border-gray-400 transition-colors" href="/blog">{{t "View all"}}</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{!-- {{#foreach posts}} --}}
            {{#foreach recents}}
                {{> "card"}}
            {{/foreach}}
            {{!-- {{/foreach}} --}}
            </div>
            {{/if}}
            {{/get}}
        </div>
        {{/if}}
        {{#if @custom.featured_post}}
        <div class="my-6 md:my-12 mb-12">
            <div class="flex justify-between items-center mb-6 mt-12 border-0 p-0">
                <div>
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-0">
                        {{@custom.featured_post_title}}
                    </h2>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {{> loop}}
            </div>
        </div>
        {{/if}}
        {{#if @custom.projects}}
        <div class="my-6 md:my-12 mb-12">
            <div class="flex justify-between items-center mb-6 mt-12">
                <div>
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-0">{{@custom.projects_title}}</h2>
                </div>
                {{!-- <a class="inline-flex items-center px-4 py-2.5 rounded border-2 border-gray-300 bg-white text-gray-700 font-medium hover:text-gray-900 hover:border-gray-500" href="/projects">View all</a> --}}
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {{> project}}
            </div>
        </div>
        {{/if}}
    </div>
</div>
